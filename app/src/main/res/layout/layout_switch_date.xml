<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <ImageView
        android:id="@+id/btn_lastMonth"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/dp_8"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_left_double" />

    <ImageView
        android:id="@+id/btn_lastDay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/dp_8"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_left" />

    <ImageView
        android:id="@+id/btn_today"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/dp_8"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_circle" />

    <ImageView
        android:id="@+id/btn_nextDay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/dp_8"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_right" />

    <ImageView
        android:id="@+id/btn_nextMonth"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/dp_8"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_right_double" />

</LinearLayout>