<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_expand"
            android:text="折叠"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="折叠进度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="15dp"
            android:text="0.0/1.0"
            android:id="@+id/tv_expand_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:text="折叠距离："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="0"
            android:id="@+id/tv_expand_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.example.flink.view.ExpandableLayout
        android:id="@+id/el"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="测试数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="测试数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="测试数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="测试数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="测试数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="测试数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="测试数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="测试数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="测试数据"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="测试数据"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="测试数据"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.example.flink.view.ExpandableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="测试数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="测试数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="测试数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="测试数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="测试数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="测试数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>